<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-sm-12">

<%= form_for @user do |f| %>
 
	<div class="form-group">
		<div class="control-label col-sm-2 margin">
		<%= f.label :username  %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true  %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-sm-2">
		<%= f.label :Email  %>
		</div>
		<div class="col-sm-10">
		<%= f.email_field :email, class: "form-control", placeholder: "Enter email"  %>
		</div>
	</div>
	<div class="form-group">
		<div class="control-label col-sm-2">
		<%= f.label :Password  %>
		</div>
		<div class="col-sm-10">
		<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
		</div>
	</div>	
	<div class="form-group">
		<div class="col-sm-offset-6 col-sm-6">
			<%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-primary btn-lg") %>
		</div>
	</div>
<% end %>
<div class="col-sm-offset-5 col-sm-4">
[<%= link_to "Cancel request and return to Article listing", articles_path%>]

</div>
	</div>